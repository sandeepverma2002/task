<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f4f8;
    }
  </style>
</head>
<body>

  <div class="das-container">
    <h2 class="das-header">Welcome, <%= user.username %>!</h2>
    <p class="das-info">Email: <%= user.email %></p>

   
    <p class="das-info">Joined On: <%= user.formattedCreatedAt %></p>

    <% if (success) { %>
      <p id="successMessage" class="das-success-msg">Login Successful! Welcome to the Dashboard.</p>
    <% } %>

    <a class="das-logout" href="/logout">Logout</a>
  </div>

  <script>
    const successMessage = document.getElementById('successMessage');
    if (successMessage) {
      setTimeout(() => {
        successMessage.style.display = 'none';
      }, 5000);
    }
  

    var tokenExpiry = <%= tokenExpiry %> * 1000;
    const warningTime = 5 * 60 * 1000; //5 min phale alert to session expiry

  const now = new Date().getTime();
  const timeLeft = tokenExpiry - now;

  if (timeLeft > warningTime) {
    setTimeout(() => {
      alert("⚠️ Your session is about to expire. Please save your work or refresh to stay logged in.");
    }, timeLeft - warningTime);
  } else {
  
    alert("⚠️ Your session will expire soon!");
  }
  </script>

</body>
</html>
